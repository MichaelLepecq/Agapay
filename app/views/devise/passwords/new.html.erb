<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 form-login">
      <div>
        <h1>Forgot your password?</h1>
      </div>
      <div class="menu-signin">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true, placeholder: "Email", label: false, input_html: { id: 'email-recovery' } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Reset password", class: "btn btn-signin" %>
          </div>
        <% end %>
        <div class="signin-links">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>


