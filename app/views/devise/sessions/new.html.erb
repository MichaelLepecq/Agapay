<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4 form-login">
      <h2>Sign in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true, placeholder: "Email", label: false %>
            <%= f.input :password, required: true, label: false, placeholder: "Password" %>
            <%= f.input :remember_me, :label_html => { :class => 'remember' }, as: :boolean if devise_mapping.rememberable?%>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-success" %>
          </div>
          <%= render "devise/shared/links" %>
      <% end %>
    </div>
  </div>
</div>


