<h1>Purchase of teddy <%= @donation.teddy_sku %></h1>
<%= form_tag donation_payments_path(@donation) do %>
  <article>
    <label class="amount">
      <span>Amount: <%= humanized_money_with_symbol(@donation.donation_amount) %></span>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="My Charity"
    data-email="<%= current_user.email %>"
    data-description="Charity <%= @donation.id %>"
    data-amount="<%= @donation.donation_amount_cents %>"
    data-currency="<%= @donation.donation_amount.currency %>"></script>
<% end %>
